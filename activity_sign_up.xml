<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD39B"
    tools:context=".SignUp"
    >
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_signup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/logo_main"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        app:layout_constraintVertical_bias=".0"
        android:fontFamily="sans-serif"
        />
<ScrollView
    android:id="@+id/layout_signup"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.7"
    android:scrollbars="vertical"
    app:layout_constraintTop_toBottomOf="@+id/logo_main"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/brown"
            android:text="Họ tên"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            />
        <EditText
            android:id="@+id/edit_Hoten_user_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/txt_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".0"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:hint="Enter your name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/brown"
            android:text="Ngày sinh"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            />
        <EditText
            android:id="@+id/edit_ngaysinh_user_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/txt_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".0"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:hint="Enter your birthday"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/brown"
            android:text="Số điện thoại"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            />
        <EditText
            android:id="@+id/edit_SDT_user_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/txt_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".0"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:hint="Enter your username"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/brown"
            android:text="Giới tính"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <RadioButton
                android:id="@+id/rd_Nu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nữ"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#615A51"
                android:fontFamily="sans-serif"/>
            <RadioButton
                android:id="@+id/rd_Nam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nam"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#615A51"
                android:fontFamily="sans-serif"/>
            <RadioButton
                android:id="@+id/rd_Khac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Khác"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#615A51"
                android:fontFamily="sans-serif"/>
        </RadioGroup>
        <TextView
            android:id="@+id/txt_user_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/brown"
            android:text="Tài khoản"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            />
        <EditText
            android:id="@+id/edit_user_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/txt_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".0"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:hint="Enter your username"
            />

        <TextView
            android:id="@+id/txt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mật khẩu"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/brown"
            android:fontFamily="sans-serif"
            />
        <EditText
            android:id="@+id/edit_password_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/txt_Repassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nhập lại mật khẩu"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/brown"
            android:fontFamily="sans-serif"
            />
        <EditText
            android:id="@+id/edit_Repassword_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            />
        <Button
            android:id="@+id/btn_signup_signup"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#8B5A2B"
            android:text="Đăng ký"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            />
    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>