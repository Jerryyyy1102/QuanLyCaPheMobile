<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/white">
            </solid>


            <corners android:radius="20dp"></corners>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" /> <!-- Khoảng cách lề -->

            <!-- Đổ bóng -->
            <item>
                <shape>
                    <solid android:color="#80000000" /> <!-- Màu đổ bóng -->
                </shape>
            </item>

            <!-- Hiệu ứng đổ bóng -->
            <item>
                <shape>
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp" /> <!-- Khoảng cách lề đổ bóng -->
                    <corners android:radius="8dp" /> <!-- Bo góc đổ bóng -->
                    <solid android:color="#20000000" /> <!-- Màu đổ bóng -->
                </shape>
            </item>

        </shape>
    </item>
</selector>