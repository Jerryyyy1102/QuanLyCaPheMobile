    tools:context=".ui.cuahang.CuahangFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_thongke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?android:attr/actionBarSize"
        android:theme="?android:attr/actionBarTheme"
        app:title="Hóa đơn"></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/thangbatdau_thongke"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/yellowbrown"
                android:gravity="center"
                android:text="5"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/darkbrown"
                android:textSize="18sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/nambatdau_thongke"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/yellowbrown"
                android:gravity="center"
                android:text="2023"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/darkbrown"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ngayketthuc_thongke"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:text="Số liệu"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/yellowbrown"
                android:textStyle="bold"
                android:background="@drawable/background_border"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/yellowbrown"
                android:gravity="center"
                android:text="Trung bình tổng doanh thu theo tháng"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/darkbrown"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hoadon_thongke"
